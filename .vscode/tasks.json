{
	"version": "2.0.0",
	"tasks": [
		
		{
            "label": "Build Functions and Compose-Up",
            "type": "shell",
            "command": "docker compose -f docker-compose.debug.yml -f docker-compose.local.yml  up -d --build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["build (functions)"]
        },
		{
            "label": "No Attach Build Functions and Compose-Up",
            "type": "shell",
            "command": "docker compose -f docker-compose.debug.yml -f docker-compose.debug.noattach.yml -f docker-compose.local.yml up -d --build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["build (functions)","Kill all"]
        },
		{
            "label": "Kill all",
            "type": "shell",
            "command" : "& './kill func.ps1'",
        },
        
		{
			"label": "clean (functions)",
			"command": "dotnet",
			"args": [
				"clean",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"type": "process",
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}/Api"
			}
		},
		{
			"label": "build (functions)",
			"command": "dotnet",
			"args": [
				"build",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"type": "process",
			"dependsOn": "clean (functions)",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}/Api"
			}
		},
		{
			"label": "clean release (functions)",
			"command": "dotnet",
			"args": [
				"clean",
				"--configuration",
				"Release",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"type": "process",
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}/Api"
			}
		},
		{
			"label": "publish (functions)",
			"command": "dotnet",
			"args": [
				"publish",
				"--configuration",
				"Release",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"type": "process",
			"dependsOn": "clean release (functions)",
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}/Api"
			}
		},
		{
			"label": "func (functions)",
			"type": "func",
			"dependsOn": "build (functions)",
			"options": {
				"cwd": "${workspaceFolder}/Api/bin/Debug/net8.0"
			},
			"command": "host start",
			"isBackground": true,
			"problemMatcher": "$func-dotnet-watch"
		},
		{
			"label": "func shell (functions)",
			"type": "shell",
			"command": "func",
			"args": [
				"host",
				"start",
				"--no-build",
				"--dotnet-isolated-debug",
				"--enable-json-output"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/Api",
			}
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/MyGames.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/MyGames.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/MyGames.sln"
            ],
            "problemMatcher": "$msCompile"
        },
		{
            "label": "watch blazor",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/Client/Client.csproj"
            ],
            "problemMatcher": "$msCompile"
        },

	]
}