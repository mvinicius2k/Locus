{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker .NET Attach (Preview)",
            "type": "docker",
            "request": "attach",
            "platform": "netCore",
            "sourceFileMap": {
                "/src": "${workspaceFolder}"
            },
            //"preLaunchTask": "func shell (functions)"

            
            
        },
        {
            "name": "Attach Functions Startup",
            "type": "coreclr",
            "request": "attach",
            "preLaunchTask": "func shell (functions)",

            
        },
        {
            "name": "Attach Functions",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:azureFunctions.pickProcess}",
        },
        {
            "name": "Client",
            "type": "dotnet",
            "request": "launch",
            "preLaunchTask": "watch blazor",
            "projectPath": "${workspaceFolder}\\Client\\Client.csproj",
            "launchConfigurationId": "TargetFramework=;https",
            
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ],
    "compounds": [
        {
            "name": "Client/Functions",
            "configurations": [
                "Attach Functions",
                "Client"
            ]
        }
    ]
}